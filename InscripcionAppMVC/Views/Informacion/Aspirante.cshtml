@model InscripcionAppMVC.Models.Inscripcion

@{
    ViewData["Title"] = "Aspirante";
}



<div class="card">
<h1 class="text-3xl font-bold mb-6">Detalles</h1>
    <h5 class="card-header">Información personal</h5>
    <hr class="mb-4" />
    <dl class="card-body">
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.TipoDocumento)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.TipoDocumento)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.Documento)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.Documento)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.Nombre)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.Nombre)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.Apellido)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.Apellido)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.FechaNacimiento)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.FechaNacimiento)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.Ciudad)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.Ciudad)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.Direccion)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.Direccion)</dd>
        </div>
    </dl>
</div>

<div class="card">
    <h5 class="card-header">Información de Contacto</h5>
    <hr class="mb-4" />
    <dl class="card-body">
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.Telefono)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.Telefono)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Aspirante.CorreoElectronico)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Aspirante.CorreoElectronico)</dd>
        </div>
    </dl>
</div>

<div class="card">
    <h5 class="card-header">Información de Matricula</h5>
    <hr class="mb-4" />
    <dl class="card-body">
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.TipoAspirante)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.TipoAspirante.Nombre)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.Programa)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.Programa.Nombre)</dd>
        </div>
        <div>
            <dt class="font-medium">@Html.DisplayNameFor(model => model.FechaInscripcion)</dt>
            <dd class="card-item">@Html.DisplayFor(model => model.FechaInscripcion)</dd>
        </div>
        <div>
            <dt class="font-medium">Hora de Inscripción</dt>
            <dd class="card-item">@Model.FechaInscripcion.ToString("HH:mm:ss")</dd>
        </div>
    </dl>
    <div class="mt-8">
        <a asp-action="Inscripciones" class="bg-gray-500 py-2 px-4 text-white rounded-lg mt-4 right">Volver</a>
    </div>
</div>

