<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InscripcionAppMVC</title>
    <link href="~/lib/datatables/css/dataTables.tailwindcss.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-sky-800">
    <header>
        <nav class="bg-orange-400 shadow-md">
            <div class="container mx-auto px-4 py-4 flex flex-col lg:flex-row items-center justify-between">
                <div class="flex items-center justify-between w-full lg:w-auto mb-4 lg:mb-0">
                    <a class="text-xl font-bold text-gray-900 mb-2 lg:mb-0" asp-area="" asp-controller="Home" asp-action="Index">InscripcionAppMVC</a>
                    <button class="block lg:hidden text-gray-900" id="nav-toggle">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
                <div class="hidden lg:flex lg:flex-col lg:items-end lg:justify-center" id="nav-content">
                    <ul class="flex flex-col lg:flex-row lg:ml-auto space-y-2 lg:space-y-0 lg:space-x-4">
                        <li>
                            <a class="block px-4 py-2 rounded bg-orange-600 text-white hover:text-gray-100" asp-controller="Registro" asp-action="Index">Nuevo Aspirante</a>
                        </li>
                        <li>
                            <a class="block px-4 py-2 rounded bg-orange-600 text-white hover:text-gray-100" asp-controller="Informacion" asp-action="Inscripciones">Inscripciones</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container mx-auto px-4 py-8">
        <main role="main" class="pb-8">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4 text-center text-white">
        <div class="container mx-auto px-4">
            &copy; 2024 - InscripcionAppMVC
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.tailwindcss.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.getElementById('nav-toggle').addEventListener('click', function () {
            document.getElementById('nav-content').classList.toggle('hidden');
        });
    </script>
</body>
</html>
